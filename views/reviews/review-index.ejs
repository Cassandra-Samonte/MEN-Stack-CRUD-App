<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'Reviews | Vapor Vault'}) %>
    <link rel="stylesheet" href="/styles/review-index.css">
</head>

<body>

    <%- include('../partials/nav.ejs') %>

        <h1>Reviews</h1>

        <section class="container">
            <div class="row"> 
                <% for (let review of reviews) { %>
                    <div class="col-md-4">
                        <div class="card">
                            <h4><%= review.reviewer %> - <%= review.title %></h4>
                            <p>Created: <%= review.reviewDate %></p>
                            <a class="Btn" href="/reviews/<%= review._id %>">Read More</a>
                        </div>
                    </div>
                <% } %>
            </div>
        </section>

    <%- include('../partials/footer.ejs') %>
    
</body>

</html>

